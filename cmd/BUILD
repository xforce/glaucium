filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//cmd/collector:all-srcs",
        "//cmd/processor:all-srcs",
        "//cmd/webapp:all-srcs",
    ],
    tags = ["automanaged"],
)
